
# ====定义树莓派3的参数========
RAM_START := 0
RAM_SIZE  != echo $$((1*1024*1024*1024)) #1GB
GPU_RAM_SIZE != echo $$((64*1024*1024)) #64M
#FREE_RAM_SIZE = RAM_SIZE - GPU_RAM_SIZE
FREE_RAM_SIZE != echo $$(( $(RAM_SIZE) - $(GPU_RAM_SIZE) ))

# ==== 外围设备地址======
GPIO_BASE := 0x3F200000
UART1_BASE := 0x3F215000
UART0_BASE := 0x3F201000
SYS_TIMER_BASE := 0x3F003000
BCM2835_INTC_BASE := 0x3F00B000
PERIPHBASE := 0x3F000000
PERIPHEND := 0x40001000